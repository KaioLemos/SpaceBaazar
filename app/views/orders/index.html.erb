<%= render "shared/navbar" %>
<div class="container">
  <h1>Orders</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>User</th>
        <th>Part</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.user.name %></td>
          <td><%= order.part.name %></td>

          <td>
            <%= link_to "Show", part_path(order.part), class: "btn btn-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>