

    <div class="container mt-5">
        <div class="row justify-content-center align-items-center mt-5">
            <div class="col-4">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title text-center">Log in</h2>
                        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>
                            <div class="form-group">
                                <%= f.input :email,
                                            required: false,
                                            autofocus: true,
                                            input_html: { autocomplete: "email", class: "form-control" } %>
                            </div>
                            <div class="form-group">
                                <%= f.input :password,
                                            required: false,
                                            input_html: { autocomplete: "current-password", class: "form-control" } %>
                            </div>
                            <div class="form-group">
                                <%= f.input :remember_me, as: :boolean, wrapper_html: { class: 'form-check' }, input_html: { class: 'form-check-input' } if devise_mapping.rememberable? %>
                            </div>
                            <div class="form-group">
                                <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
                            </div>
                        <% end %>
                        <%= render "devise/shared/links" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
