<%# <%= stylesheet_link_tag 'card'%>
<%= simple_form_for @part do |f| %>
<div class="container p-5 mt-100 d-flex flex-row justify-content-around align-items-center">
  <div class="card card-border">
  <div class="card-body">
    <li class="list-group-item"><strong>Photo:</strong>  <%= f.input :photo, as: :file, class: "img-input", label: false %></li>
    <%# <%= f.input :photo, as: :image_preview, input_html: {preview_version: :thumb} %>
    <%# <%= f.input :some_attachment_field, as: :attachment_preview %>
  </div>
  </div>

 <div class="card card-border">
  <div class="card-body">
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><strong>Name:</strong> <%= @part.name %> <%= f.input :name, label: false %></li>
      <li class="list-group-item"><strong>Category:</strong> <%= @part.category %> <%= f.input :category, label: false, collection: ['Rocket Engine', 'Navigation System', 'Fuel Tank', 'Communication Antenna', 'Life Support System', 'Hull Plating', 'Space Suits', 'Cargo Bay', 'Control Console', 'Thrusters'] %></li>
      <li class="list-group-item"><strong>Origin:</strong> <%= @part.origin %> <%= f.input :origin, label: false, collection: ['Mercury', 'Venus', 'Earth', 'Mars', 'Jupiter', 'Saturn', 'Uranus', 'Neptune'] %></li>
      <li class="list-group-item"><strong>Years:</strong> <%= @part.years %> <%= f.input :years, label: false %></li>
      <li class="list-group-item"><strong>Description:</strong> <%= @part.description %> <%= f.input :description, label: false %></li>
      <li class="list-group-item"><strong>Price:</strong> <%= @part.price %> <%= f.input :price, label: false %></li>
    </ul>
  </div>
</div>

</div>

<div class="d-flex justify-content-center gap-3" >
  <p><%= link_to "Back", parts_path, class:'btn-page'%></p>
  <p><%= f.button :submit, class:'btn-page' %> </p>
</div>
<% end %>
